<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WhichEndingActivity"
    android:id="@+id/end"
    android:background="@drawable/countback">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/calenderview"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/jcalendar" />

            <TextView
                android:id="@+id/datetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/pfstardust"
                android:text="2"
                android:textColor="@android:color/black"
                android:textSize="34dp"
                android:textStyle="bold"
                />

            <ImageView
                android:id="@+id/setting"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="800dp"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:src="@drawable/setting" />

        </FrameLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/frame"
                android:layout_width="559dp"
                android:layout_height="140dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="170dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/speech">

                <TextView
                    android:id="@+id/guestname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="36dp"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/sol"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txtTalk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="17dp"
                    android:fontFamily="@font/sol"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="19dp" />

                <TextView
                    android:id="@+id/txtTalk2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="17dp"
                    android:fontFamily="@font/sol"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="19dp"
                    android:visibility="invisible" />

            </FrameLayout>

            <ImageView
                android:id="@+id/guest"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <LinearLayout
                android:id="@+id/linBtn"
                android:layout_width="match_parent"
                android:layout_height="299dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="invisible">


                <Button
                    android:id="@+id/btnSelect1"
                    android:layout_width="600dp"
                    android:layout_height="59dp"
                    android:background="@drawable/button"
                    android:fontFamily="@font/sol"
                    android:lineSpacingExtra="7dp"
                    android:text="Button"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="14dp" />

                <Button
                    android:id="@+id/btnSelect2"
                    android:layout_width="600dp"
                    android:layout_height="59dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/button"
                    android:fontFamily="@font/sol"
                    android:lineSpacingExtra="7dp"
                    android:text="Button"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="14dp" />


            </LinearLayout>

        </FrameLayout>
    </FrameLayout>


</LinearLayout>